{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@/*": ["src/*"]
        },
        "baseUrl": "./",
        "sourceMap": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "files": true
    }
}
